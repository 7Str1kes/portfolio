<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
    <div class="absolute inset-0 bg-gradient-to-b from-black/90 via-black/80 to-transparent backdrop-blur-xl border-b border-zinc-800/50"></div>

    <nav class="container mx-auto px-4 py-4 relative">
        <div class="flex items-center justify-between">
            <a href="/" class="group relative text-2xl font-bold text-white transition-all duration-300">
                <span class="logo-text bg-gradient-to-r from-purple-400 to-violet-600 bg-clip-text text-transparent group-hover:from-purple-300 group-hover:to-violet-500 transition-all duration-300">
                    7Str1kes
                </span>
            </a>

            <div class="hidden md:flex items-center gap-1 absolute left-1/2 -translate-x-1/2">
                <a href="/#about" class="nav-link relative px-4 py-2 text-zinc-300 hover:text-white transition-all duration-300 group">
                    <span class="relative z-10">Sobre Mí</span>
                    <div class="absolute inset-0 bg-purple-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity scale-95 group-hover:scale-100 duration-300"></div>
                </a>
                <a href="/projects" class="nav-link relative px-4 py-2 text-zinc-300 hover:text-white transition-all duration-300 group">
                    <span class="relative z-10">Proyectos</span>
                    <div class="absolute inset-0 bg-purple-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity scale-95 group-hover:scale-100 duration-300"></div>
                </a>
                <a href="/#glstudios" class="relative px-5 py-2 mx-2 bg-gradient-to-r from-purple-500/20 to-violet-500/20 hover:from-purple-500/30 hover:to-violet-500/30 text-purple-400 hover:text-purple-300 font-medium rounded-lg border border-purple-500/30 hover:border-purple-400/50 transition-all duration-300 hover:scale-105 shadow-lg shadow-purple-500/10">
                    <span class="relative z-10">GL Studios</span>
                </a>
                <a href="/services" class="nav-link relative px-4 py-2 text-zinc-300 hover:text-white transition-all duration-300 group">
                    <span class="relative z-10">Servicios</span>
                    <div class="absolute inset-0 bg-purple-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity scale-95 group-hover:scale-100 duration-300"></div>
                </a>
                <a href="/reviews" class="nav-link relative px-4 py-2 text-zinc-300 hover:text-white transition-all duration-300 group">
                    <span class="relative z-10">Reviews</span>
                    <div class="absolute inset-0 bg-purple-500/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity scale-95 group-hover:scale-100 duration-300"></div>
                </a>
            </div>

            <!-- Mobile menu button -->
            <button id="mobile-menu-btn" class="md:hidden text-white p-2 hover:text-purple-400 transition-colors">
                <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
                <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-2 animate-fade-in-down">
            <a href="/#about" class="block px-4 py-2.5 text-zinc-300 hover:text-white hover:bg-purple-500/10 rounded-lg transition-all duration-300">
                Sobre Mí
            </a>
            <a href="/projects" class="block px-4 py-2.5 text-zinc-300 hover:text-white hover:bg-purple-500/10 rounded-lg transition-all duration-300">
                Proyectos
            </a>
            <a href="/#glstudios" class="block px-4 py-2.5 bg-gradient-to-r from-purple-500/20 to-violet-500/20 text-purple-400 font-medium rounded-lg border border-purple-500/30 transition-all duration-300">
                GL Studios
            </a>
            <a href="/services" class="block px-4 py-2.5 text-zinc-300 hover:text-white hover:bg-purple-500/10 rounded-lg transition-all duration-300">
                Servicios
            </a>
            <a href="/reviews" class="block px-4 py-2.5 text-zinc-300 hover:text-white hover:bg-purple-500/10 rounded-lg transition-all duration-300">
                Reviews
            </a>
        </div>
    </nav>
</header>

<script>
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    const header = document.getElementById('header');

    mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
        menuIcon?.classList.toggle('hidden');
        closeIcon?.classList.toggle('hidden');
    });

    window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;

        if (currentScroll > 100) {
            header?.classList.add('header-scrolled');
        } else {
            header?.classList.remove('header-scrolled');
        }
    });
</script>

<style>
    body {
        padding-top: 80px;
    }

    @keyframes fade-in-down {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-down {
        animation: fade-in-down 0.3s ease-out forwards;
    }

    #header.header-scrolled {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .nav-link::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%) scaleX(0);
        width: 80%;
        height: 2px;
        background: linear-gradient(to right, #a855f7, #7c3aed);
        transition: transform 0.3s ease;
    }

    .nav-link:hover::before {
        transform: translateX(-50%) scaleX(1);
    }

    .logo-text {
        display: inline-block;
    }
</style>