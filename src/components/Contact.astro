<style>
    @keyframes pulse-slow {
        0%, 100% {
            opacity: 0.1;
        }
        50% {
            opacity: 0.15;
        }
    }

    @keyframes pulse-slower {
        0%, 100% {
            opacity: 0.1;
        }
        50% {
            opacity: 0.2;
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s ease-in-out infinite;
    }

    .animate-pulse-slower {
        animation: pulse-slower 6s ease-in-out infinite;
    }
</style>

<script>
    const discordBtn = document.getElementById('discord-copy-btn');
    const discordUsername = document.getElementById('discord-username');
    const discordFeedback = document.getElementById('discord-copy-feedback');

    if (discordBtn && discordUsername && discordFeedback) {
        discordBtn.addEventListener('click', async () => {
            const username = discordUsername.textContent || '';

            try {
                await navigator.clipboard.writeText(username);

                discordFeedback.style.opacity = '1';

                setTimeout(() => {
                    discordFeedback.style.opacity = '0';
                }, 2000);
            } catch (err) {
                console.error('Error al copiar:', err);
            }
        });
    }
</script>
