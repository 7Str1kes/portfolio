<style>
    #footer-particles-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }
</style>

<script>
    const canvas = document.getElementById('footer-particles-canvas') as HTMLCanvasElement;
    if (canvas) {
        const ctx = canvas.getContext('2d')!;
        const footer = canvas.parentElement!;

        function resizeCanvas() {
            canvas.width = footer.offsetWidth;
            canvas.height = footer.offsetHeight;
        }

        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);

        class FloatingParticle {
            x: number;
            y: number;
            size: number;
            opacity: number;
            velocityX: number;
            velocityY: number;
            pulseSpeed: number;
            pulsePhase: number;
            color: string;

            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 2 + 1;
                this.opacity = Math.random() * 0.4 + 0.2;
                this.velocityX = (Math.random() - 0.5) * 0.3;
                this.velocityY = (Math.random() - 0.5) * 0.3;
                this.pulseSpeed = Math.random() * 0.02 + 0.01;
                this.pulsePhase = Math.random() * Math.PI * 2;

                const colors = [
                    'rgba(168, 85, 247, ',
                    'rgba(147, 51, 234, ',
                    'rgba(139, 92, 246, ',
                    'rgba(124, 58, 237, '
                ];
                this.color = colors[Math.floor(Math.random() * colors.length)];
            }

            update() {
                this.x += this.velocityX;
                this.y += this.velocityY;
                this.pulsePhase += this.pulseSpeed;

                if (this.x < 0 || this.x > canvas.width) this.velocityX *= -1;
                if (this.y < 0 || this.y > canvas.height) this.velocityY *= -1;
            }

            draw() {
                const pulse = Math.sin(this.pulsePhase) * 0.3 + 0.7;
                const currentOpacity = this.opacity * pulse;

                ctx.shadowBlur = 10;
                ctx.shadowColor = this.color + (currentOpacity * 0.8) + ')';

                ctx.fillStyle = this.color + currentOpacity + ')';
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();

                ctx.shadowBlur = 0;
            }
        }

        const particles: FloatingParticle[] = [];

        for (let i = 0; i < 30; i++) {
            particles.push(new FloatingParticle());
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            particles.forEach(particle => {
                particle.update();
                particle.draw();
            });

            requestAnimationFrame(animate);
        }

        animate();
    }
</script>
