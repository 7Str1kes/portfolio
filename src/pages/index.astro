---
import "../styles/global.css";

import Layout from '../layouts/Layout.astro';
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import AboutMe from "../components/AboutMe.astro";
import TitleSection from "../components/TitleSection.astro";
import Skills from "../components/Skills.astro";
import GLStudios from "../components/GLStudios.astro";
import Contact from "../components/Contact.astro";
---

<Layout
	title="Portfolio de 7Str1kes"
	description="Desarrollador de software especializado en plugins de Minecraft, bots de Discord y desarrollo web"
>
	<main class="px-4 md:px-8">
		<SectionContainer class="px-4 md:px-16 py-32 md:py-48">
			<Hero>
				<slot />
			</Hero>
		</SectionContainer>

		<div class="space-y-32 md:space-y-40 pb-20">
			<!-- About Me -->
			<SectionContainer id="about" class="scroll-mt-20" data-scroll-animate="fade-up">
				<TitleSection>
					Sobre Mí
				</TitleSection>
				<AboutMe/>
			</SectionContainer>

			<!-- Skills -->
			<SectionContainer id="skills" class="scroll-mt-20" data-scroll-animate="fade-up">
				<TitleSection>
					Tecnologías
				</TitleSection>
				<Skills/>
			</SectionContainer>

			<!-- GL Studios -->
			<SectionContainer id="glstudios" class="scroll-mt-20" data-scroll-animate="fade-up">
				<TitleSection>
					GL Studios
				</TitleSection>
				<GLStudios/>
			</SectionContainer>

			<!-- Contact -->
			<SectionContainer id="contact" class="scroll-mt-20" data-scroll-animate="scale">
				<TitleSection>
					Contacto
				</TitleSection>
				<Contact/>
			</SectionContainer>
		</div>
	</main>
</Layout>

<script>
	import { initScrollAnimations } from '../scripts/scrollAnimations';
	initScrollAnimations();
</script>