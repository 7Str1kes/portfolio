---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import SectionContainer from "../components/SectionContainer.astro";

const reviews = [
    {
        server: "GoldenLyons Network",
        author: "Toni1487P",
        role: "Owner",
        rating: 5,
        comment: ""
    },
    {
        server: "Widow Network",
        author: "Justicia_",
        role: "Owner",
        rating: 5,
        comment: ""
    },
    {
        server: "",
        author: "",
        role: "Owner",
        rating: 5,
        comment: ""
    }
